<h1>Listing hosts</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Location</th>
      <th>Title</th>
      <th>Des</th>
      <th>Perdes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hosts.each do |host| %>
      <tr>
        <td><%= host.email %></td>
        <td><%= host.firstName %></td>
        <td><%= host.lastName %></td>
        <td><%= host.location %></td>
        <td><%= host.title %></td>
        <td><%= host.des %></td>
        <td><%= host.perDes %></td>
        <td><%= link_to 'Show', host %></td>
        <td><%= link_to 'Edit', edit_host_path(host) %></td>
        <td><%= link_to 'Destroy', host, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

